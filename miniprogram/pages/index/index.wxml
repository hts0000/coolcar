<view class="page-body">
  <map
    id="mapId"
    class="map"
    latitude="{{location.latitude}}"
    longitude="{{location.longitude}}"
    scale="{{scale}}"
    setting="{{setting}}"
    enable-overlooking="{{isOverLooking}}"
    enable-3D="{{is3D}}"
    markers="{{markers}}"
  >
    <cover-view class="icon-container">
      <cover-image wx:if="{{!avatarURL}}" src="/resources/account.png"></cover-image>
      <!-- BUG: 用户授予权限之后仍然不显示 -->
      <cover-image class="round" wx:if="{{avatarURL}}" src="{{avatarURL}}"></cover-image>
      <cover-image bindtap="onMyLocationTap" src="/resources/my_location.png"></cover-image>
    </cover-view>
    <cover-view class="btn-container bg-grey round" bindtap="onScanClicked">
      <cover-view>扫码租车</cover-view>
    </cover-view>
  </map>
</view>
