<view class="page-body">
  <map
    id="mapId"
    class="map"
    latitude="{{location.latitude}}"
    longitude="{{location.longitude}}"
    scale="{{scale}}"
    setting="{{setting}}"
    enable-overlooking="{{isOverLooking}}"
    enable-3D="{{is3D}}"
    markers="{{markers}}"
  >
    <cover-view class="icon-container">
      <cover-image src="/resources/account.png"></cover-image>
      <cover-image bindtap="onMyLocationTap" src="/resources/my_location.png"></cover-image>
    </cover-view>
    <!-- 元素绑定移动markers的函数 -->
    <cover-view class="btn-container bg-grey round" bindtap="moveCars">
      <cover-view>扫码租车</cover-view>
    </cover-view>
  </map>
</view>
